@model List<Pizza>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Pizzeria</h1>
</div>
<div class="d-flex justify-content-center flex-wrap">
    @if(Model.Count > 0){
        @foreach (Pizza pizza in Model)
        {
            <div class="card m-2" style="width: 18rem;">
                <img src="https://img.pizza/350/400" class="card-img-top" alt="pizza">
                <div class="card-body">
                    <h5 class="card-title">@pizza.Name</h5>
                    <p class="card-text">@pizza.Description</p>
                    <p class="card-text">Prezzo: @pizza.Price €</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Pizza" asp-action="Detail" asp-route-id="@pizza.Id">Dettagli</a>
                </div>
            </div>
        }
   
    } else {
        <h3>Non ci sono pizze al momento</h3>
    }
</div>